<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <f:SimpleForm>
        <f:content>
            <core:Title text="Product Info"></core:Title>
            <Label text="Name"></Label>
            <Text text="{NAME}"></Text>
            <Label text="Type"></Label>
            <Text text="{CATEGORY}"></Text>
            <Label text="Price"></Label>
            <Text text="{PRICE} {CURRENCY_CODE}"></Text>
            <!-- <Label text="Status"></Label>
            <ObjectStatus text="{status}" state="{
                path: 'status',
                formatter: '.formatter.getState'
            }"></ObjectStatus> -->
            <core:Title text="Supplier Info"></core:Title>
            <Label text="Supplier Id"></Label>
            <Text text="{To_Supplier/BP_ID}"></Text>
            <Label text="Name"></Label>
            <Text text="{To_Supplier/COMPANY_NAME}"></Text>
            <Label text="Location"></Label>
            <Text text="{To_Supplier/CITY} {To_Supplier/COUNTRY}"></Text>
            <Label text="Contact Email"></Label>
            <Text text="{To_Supplier/WEB_ADDRESS}"></Text>
        </f:content>
    </f:SimpleForm>
    <Image id="prodImg"></Image>
</core:FragmentDefinition>